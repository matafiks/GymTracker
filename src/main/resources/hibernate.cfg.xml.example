# requires your own database details to work

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Konfiguracja połączenia z MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/your_database?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">your_db_user</property>
        <property name="hibernate.connection.password">your_password</property>

        <!-- Dialekt dla MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Ustawienia Hibernate -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Dodaj klasy encji -->
        <mapping class="entity.Exercise"/>
        <mapping class="entity.SingleSet"/>
        <mapping class="entity.Workout"/>
    </session-factory>
</hibernate-configuration>